# üîê Environment Configuration for Layer 2 Trading Platform
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# CORE API KEYS - Required for all trading operations
# =============================================================================

# Alpaca Trading API (Paper Trading Recommended)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL

# Alpha Vantage (Market Data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io (Alternative Market Data)
POLYGON_API_KEY=your_polygon_api_key_here

# News API (Sentiment Analysis)
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# LAYER 2 CONFIGURATION - New Backend Settings
# =============================================================================

# Trading Mode Configuration
TRADING_MODE=paper  # Options: paper, live
EXECUTION_MODE=backtest  # Options: backtest, live

# Risk Management Settings
MAX_DAILY_LOSS=-1000.0  # Maximum daily loss limit (USD)
MAX_POSITION_SIZE=10000.0  # Maximum position size (USD)
PORTFOLIO_HEAT_LIMIT=0.25  # Maximum portfolio heat (0.0 to 1.0)

# Kill Switch & Safety Rails
KILL_SWITCH_ENABLED=true  # Emergency trading stop
THROTTLE_ENABLED=true  # Order rate limiting
MAX_ORDERS_PER_MINUTE=60  # Order throttling limit

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# Metrics Configuration
METRICS_ENABLED=true  # Enable Prometheus metrics
METRICS_PORT=8002  # Port for metrics endpoint
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Database Configuration (Optional)
DATABASE_URL=sqlite:///trading_platform.db  # Local SQLite for development
# DATABASE_URL=postgresql://user:pass@localhost/trading_db  # Production PostgreSQL

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# WebSocket Configuration
WS_ENABLED=true  # Enable WebSocket real-time updates
WS_HEARTBEAT_INTERVAL=30  # WebSocket heartbeat (seconds)

# Dashboard Configuration
DASHBOARD_PORT=3003  # React dashboard port
API_BASE_URL=http://localhost:8002  # Backend API URL for dashboard

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Test Environment
TEST_MODE=false  # Enable test mode with mock data
MOCK_BROKER=false  # Use mock broker for testing

# Debug Settings
DEBUG_ENABLED=false  # Enable debug logging
SIMULATION_SPEED=1.0  # Backtest simulation speed multiplier

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3003,http://localhost:3000  # Frontend URLs

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Execution Settings
ORDER_TIMEOUT=30  # Order execution timeout (seconds)
RETRY_ATTEMPTS=3  # Number of retry attempts for failed operations
BATCH_SIZE=100  # Batch size for bulk operations

# Memory & Performance
MAX_WORKERS=4  # Maximum worker threads
CACHE_SIZE=1000  # In-memory cache size
